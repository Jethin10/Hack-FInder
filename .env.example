# GEMINI_API_KEY: Required for Gemini AI API calls.
# AI Studio automatically injects this at runtime from user secrets.
# Users configure this via the Secrets panel in the AI Studio UI.
GEMINI_API_KEY="MY_GEMINI_API_KEY"

# APP_URL: The URL where this applet is hosted.
# AI Studio automatically injects this at runtime with the Cloud Run service URL.
# Used for self-referential links, OAuth callbacks, and API endpoints.
APP_URL="MY_APP_URL"

# HackHunt API server configuration
# Where the local SQLite file is stored (relative or absolute path)
HACKHUNT_DB_PATH="./data/hackhunt.db"

# Set to true to wipe + reseed local data on API startup.
HACKHUNT_FORCE_SEED="false"

# Browser origin allowed for API requests in local/prod deployments.
HACKHUNT_ALLOWED_ORIGIN="*"

# Optional override if frontend should hit a fully-qualified API host.
# Keep empty for same-origin calls (recommended with Vite proxy).
VITE_API_BASE_URL=""

# Optional override for ingestion bootstrap JSON loaded on API startup.
HACKHUNT_INGESTED_JSON_PATH="./data/ingested_hackathons.json"

# Ingestion settings (used by python scripts/run_ingestion.py)
HACKHUNT_INGEST_MAX_PAGES="5"
HACKHUNT_INGEST_SOURCES="devpost,devfolio,hackerearth,unstop,mlh"
HACKHUNT_MLH_SEASON_YEAR=""
HACKHUNT_DISABLE_GEOCODING="false"
