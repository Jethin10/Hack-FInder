{
  "name": "react-example",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently -k -n api,web -c cyan,green \"npm:dev:api\" \"npm:dev:web\"",
    "dev:web": "vite --port=3000 --host=0.0.0.0",
    "dev:api": "tsx watch server/index.ts",
    "start": "tsx server/index.ts",
    "start:api": "tsx server/index.ts",
    "ingest": "python scripts/run_ingestion.py",
    "test:unit": "node --import tsx --test server/**/*.test.ts",
    "test:ingestion": "python -m unittest discover -s ingestion/tests -t ..",
    "build": "vite build",
    "preview": "vite preview",
    "clean": "node -e \"require('fs').rmSync('dist',{recursive:true,force:true})\"",
    "lint:web": "tsc --noEmit -p tsconfig.json",
    "lint:api": "tsc --noEmit -p tsconfig.server.json",
    "lint": "npm run lint:web && npm run lint:api"
  },
  "dependencies": {
    "@google/genai": "^1.29.0",
    "lucide-react": "^0.546.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "express": "^4.21.2",
    "dotenv": "^17.2.3",
    "better-sqlite3": "^12.4.1",
    "motion": "^12.23.24"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.14",
    "@vitejs/plugin-react": "^5.0.4",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.14.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "tailwindcss": "^4.1.14",
    "tsx": "^4.21.0",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "@types/express": "^4.17.21"
  }
}